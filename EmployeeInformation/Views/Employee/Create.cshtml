@model EmployeeInformation.Models.Employee

<div>

	@using (Html.BeginForm("Save", "Employee", FormMethod.Post))
	{
		<input type="text" hidden value="0" />
		<div class="form-group">
			@Html.LabelFor(a => a.Firstname)
			@Html.TextBoxFor(a => a.Firstname, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Middlename)
			@Html.TextBoxFor(a => a.Middlename, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Lastname)
			@Html.TextBoxFor(a => a.Lastname, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Email)
			@Html.TextBoxFor(a => a.Email, new { @class = "form-control", })
		</div>
		<div class="form-group">
			<select class="form-control" id="StudentGender" name="Gender">
				<option>Select Gender</option>
				<option>Male</option>
				<option>Female</option>
			</select>
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Age)
			@Html.TextBoxFor(a => a.Age, new { @class = "form-control", @type = "number" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Birthdate)
			@Html.TextBoxFor(a => a.Birthdate, new { @class = "form-control", @type = "date" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Birthplace)
			@Html.TextBoxFor(a => a.Birthplace, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.ContactNo)
			@Html.TextBoxFor(a => a.ContactNo, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(a => a.Password)
			@Html.PasswordFor(a => a.Password, new { @class = "form-control" })
		</div>
		<button type="submit" class="btn btn-primary">Save</button>
	}


</div>